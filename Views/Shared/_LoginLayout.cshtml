<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mail Archiver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css">
    <link rel="icon" type="image/svg" href="~/favicon.svg">
    <style>
        body {
            background: linear-gradient(135deg, #0f1117 0%, #1a1d2e 50%, #0f1117 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #e2e8f0;
        }
        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 0 20px;
        }
        .login-card {
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            background: rgba(30, 34, 46, 0.7);
        }
        .card-body {
            padding: 2rem;
        }
        .card-footer {
            background: transparent;
            border-top: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 0 0 16px 16px;
        }
        .form-control, .input-group-text {
            border-radius: 10px;
            background-color: rgba(30, 34, 46, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: #e2e8f0;
        }
        .form-control::placeholder {
            color: #94a3b8;
        }
        .form-control:focus {
            background-color: rgba(30, 34, 46, 0.8);
            border-color: #5b9ef4;
            box-shadow: 0 0 0 0.2rem rgba(91, 158, 244, 0.2);
            color: #e2e8f0;
        }
        .input-group .form-control {
            border-left: none;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        .input-group-text {
            background: rgba(255, 255, 255, 0.04);
            border-right: none;
            color: #94a3b8;
        }
        .btn-lg {
            border-radius: 10px;
            padding: 12px;
        }
        .btn-primary {
            background-color: #5b9ef4;
            border-color: #5b9ef4;
        }
        .btn-primary:hover {
            background-color: #4a8fe0;
            border-color: #4a8fe0;
        }
        .alert {
            border-radius: 10px;
        }
        .form-label {
            color: #94a3b8;
        }
        a {
            color: #63b3ed;
        }
        a:hover {
            color: #90cdf4;
        }
        @@media (max-width: 480px) {
            .login-container {
                padding: 0 10px;
            }
            .card-body {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <main class="login-main">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
